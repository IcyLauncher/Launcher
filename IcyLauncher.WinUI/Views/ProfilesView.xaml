<Page
    x:Class="IcyLauncher.WinUI.Views.ProfilesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:CommunityToolkit.WinUI.UI.Media"
    xmlns:xmle="using:IcyLauncher.Xaml.Elements"
    Background="Transparent"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <StackPanel>
        <Button Command="{x:Bind viewModel.EnableMicaCommand}" Content="Mica" />
        <Button Command="{x:Bind viewModel.DisableMicaCommand}" Content="Mica-d" />
        <ToggleSwitch Header="Mica Dark" IsOn="{x:Bind viewModel.IsMicaDark, Mode=TwoWay}" />
        <Button Command="{x:Bind viewModel.EnableAcrylicCommand}" Content="Acrylic" />
        <Button Command="{x:Bind viewModel.DisableAcrliycCommand}" Content="Acyrlic-d" />
        <ToggleSwitch Header="Acrylic Dark" IsOn="{x:Bind viewModel.IsAcrylicDark, Mode=TwoWay}" />
        <Button Command="{x:Bind viewModel.EnableVibrancyCommand}" Content="Vibrancy" />
        <Button Command="{x:Bind viewModel.DisableVibrancyCommand}" Content="Vibrancy-d" />
        <ToggleSwitch Header="Vibrancy Dark" IsOn="{x:Bind viewModel.IsVibrancyDark, Mode=TwoWay}" />

    </StackPanel>

</Page>
