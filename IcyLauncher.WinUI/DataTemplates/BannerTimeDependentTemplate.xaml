<ResourceDictionary
    x:Class="IcyLauncher.WinUI.DataTemplates.BannerTimeDependentTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mdls="using:IcyLauncher.Data.Models">

    <DataTemplate x:Key="BannerTimeDependentTemplate" x:DataType="mdls:BannerTimeDependentItem">
        <Grid Width="290" Height="106">
            <Grid
                Margin="8,8,8,28"
                BorderBrush="{ThemeResource ControlOutline}"
                BorderThickness="2"
                CornerRadius="4">
                <Rectangle Loaded="OnImageLoaded" />
            </Grid>
            <TextBlock
                Margin="8,80,0,0"
                HorizontalAlignment="Left"
                FontSize="15"
                Style="{StaticResource TitleSecondary}"
                Text="{x:Bind Title}"
                TextTrimming="CharacterEllipsis" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>