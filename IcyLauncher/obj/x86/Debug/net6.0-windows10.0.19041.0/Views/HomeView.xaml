<Page x:ConnectionId='1'
    x:Class="IcyLauncher.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:IcyLauncher.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <TextBlock x:ConnectionId='2'
            FontSize="20"
            Foreground="{StaticResource AccentPrimary}"
                                                                                  />

        <StackPanel Margin="50">
            <ToggleSwitch x:ConnectionId='3' Header="enable"                                               />
            <ToggleSwitch x:ConnectionId='4' Header="Darky"                                                 />
            <Button x:ConnectionId='5'                                         >Mica</Button>
            <Button x:ConnectionId='6'                                            >Acrylic</Button>
            <Button x:ConnectionId='7'                                           >Simple</Button>
            <Button x:ConnectionId='8'                                         >None</Button>
        </StackPanel>
    </Grid>
</Page>

