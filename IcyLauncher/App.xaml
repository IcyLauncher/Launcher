<Application
    x:Class="IcyLauncher.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ex="using:CommunityToolkit.WinUI.UI"
    xmlns:md="using:CommunityToolkit.WinUI.UI.Media"
    xmlns:models="using:IcyLauncher.Core.Models"
    xmlns:primitives="using:Microsoft.UI.Xaml.Controls.Primitives"
    xmlns:ui="using:IcyLauncher.UI"
    xmlns:uix="using:IcyLauncher.UI.Xaml"
    xmlns:xaml="using:IcyLauncher.Core.Xaml"
    RequestedTheme="Dark">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />

                <uix:ProfileTemplate />
            </ResourceDictionary.MergedDictionaries>

            <xaml:ArrayConverter x:Key="ArrayConverter" />
            <xaml:BrushColorConverter x:Key="BrushColorConverter" />
            <xaml:BoolDoubleConverter x:Key="BoolDoubleConverter" />
            <xaml:InvertBool x:Key="InvertBool" />
            <xaml:JoinString x:Key="JoinString" />
            <xaml:DateTimeFormatter x:Key="DateTimeFormatter" />
            <xaml:BoolScrollbarVisibilityConverter x:Key="BoolScrollbarVisibilityConverter" />


            <models:Theme x:Key="Colors" />

            <SolidColorBrush x:Key="AccentPrimary" Color="{Binding Accent.Primary, Source={ThemeResource Colors}, Mode=OneWay}" />
            <SolidColorBrush x:Key="AccentLight" Color="{Binding Accent.Light, Source={ThemeResource Colors}, Mode=OneWay}" />
            <SolidColorBrush x:Key="AccentDark" Color="{Binding Accent.Dark, Source={ThemeResource Colors}, Mode=OneWay}" />

            <SolidColorBrush x:Key="BackgroundSolid" Color="{Binding Background.Solid, Source={ThemeResource Colors}, Mode=OneWay}" />
            <SolidColorBrush x:Key="BackgroundTransparent" Color="{Binding Background.Transparent, Source={ThemeResource Colors}, Mode=OneWay}" />
            <SolidColorBrush x:Key="BackgroundGradient" Color="{Binding Background.Gradient, Source={ThemeResource Colors}, Mode=OneWay}" />
            <SolidColorBrush x:Key="BackgroundGradientTransparent" Color="{Binding Background.GradientTransparent, Source={ThemeResource Colors}, Mode=OneWay}" />

            <SolidColorBrush x:Key="TextPrimary" Color="{Binding Text.Primary, Source={ThemeResource Colors}, Mode=OneWay}" />
            <SolidColorBrush x:Key="TextSecondary" Color="{Binding Text.Secondary, Source={ThemeResource Colors}, Mode=OneWay}" />
            <SolidColorBrush x:Key="TextTertiary" Color="{Binding Text.Tertiary, Source={ThemeResource Colors}, Mode=OneWay}" />
            <SolidColorBrush x:Key="TextDisabled" Color="{Binding Text.Disabled, Source={ThemeResource Colors}, Mode=OneWay}" />

            <SolidColorBrush x:Key="ControlPrimary" Color="{Binding Control.Primary, Source={ThemeResource Colors}, Mode=OneWay}" />
            <SolidColorBrush x:Key="ControlOutline" Color="{Binding Control.Outline, Source={ThemeResource Colors}, Mode=OneWay}" />
            <SolidColorBrush x:Key="ControlPrimaryDisabled" Color="{Binding Control.PrimaryDisabled, Source={ThemeResource Colors}, Mode=OneWay}" />
            <SolidColorBrush x:Key="ControlOutlineDisabled" Color="{Binding Control.OutlineDisabled, Source={ThemeResource Colors}, Mode=OneWay}" />

            <SolidColorBrush x:Key="ControlSolidPrimary" Color="{Binding Control.Solid.Primary, Source={ThemeResource Colors}, Mode=OneWay}" />
            <SolidColorBrush x:Key="ControlSolidOutline" Color="{Binding Control.Solid.Outline, Source={ThemeResource Colors}, Mode=OneWay}" />
            <SolidColorBrush x:Key="ControlSolidPrimaryDisabled" Color="{Binding Control.Solid.PrimaryDisabled, Source={ThemeResource Colors}, Mode=OneWay}" />
            <SolidColorBrush x:Key="ControlSolidOutlineDisabled" Color="{Binding Control.Solid.OutlineDisabled, Source={ThemeResource Colors}, Mode=OneWay}" />



            <SolidColorBrush x:Key="ButtonBackground" Color="{Binding Color, Source={ThemeResource ControlPrimary}}" />
            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{Binding Color, Source={ThemeResource ControlOutline}}" />
            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="{Binding Color, Source={ThemeResource ControlPrimaryDisabled}}" />
            <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="{Binding Color, Source={ThemeResource ControlPrimaryDisabled}}" />

            <SolidColorBrush x:Key="ButtonBorderBrush" Color="{Binding Color, Source={ThemeResource ControlOutline}}" />
            <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="{Binding Color, Source={ThemeResource ControlOutline}}" />
            <SolidColorBrush x:Key="ButtonBorderBrushPressed" Color="{Binding Color, Source={ThemeResource ControlOutlineDisabled}}" />
            <SolidColorBrush x:Key="ButtonBorderBrushDisabled" Color="{Binding Color, Source={ThemeResource ControlOutlineDisabled}}" />

            <SolidColorBrush x:Key="ButtonForeground" Color="{Binding Color, Source={ThemeResource TextSecondary}}" />
            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="{Binding Color, Source={ThemeResource TextPrimary}}" />
            <SolidColorBrush x:Key="ButtonForegroundPressed" Color="{Binding Color, Source={ThemeResource TextTertiary}}" />
            <SolidColorBrush x:Key="ButtonForegroundDisabled" Color="{Binding Color, Source={ThemeResource TextDisabled}}" />

            <Style x:Key="LaunchButton" TargetType="Button">
                <Style.Setters>
                    <Setter Property="Width" Value="130" />
                    <Setter Property="Height" Value="34" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <Rectangle RadiusX="4" RadiusY="4">
                                        <Rectangle.Fill>
                                            <md:BackdropBlurBrush Amount="3" />
                                        </Rectangle.Fill>
                                    </Rectangle>

                                    <ContentPresenter
                                        x:Name="ColoredBackground"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Bottom"
                                        ex:Effects.Shadow="{TemplateBinding ex:Effects.Shadow}"
                                        Background="{Binding Control.Primary, Source={ThemeResource Colors}, Mode=OneWay, Converter={StaticResource BrushColorConverter}}"
                                        BorderBrush="{Binding Control.PrimaryDisabled, Source={ThemeResource Colors}, Mode=OneWay, Converter={StaticResource BrushColorConverter}}"
                                        BorderThickness="1"
                                        Content="{TemplateBinding Content}"
                                        CornerRadius="4"
                                        Opacity="1" />
                                    <TextBlock
                                        x:Name="TextPresenter"
                                        Margin="{TemplateBinding Padding}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontFamily="{TemplateBinding FontFamily}"
                                        Foreground="{Binding Text.Secondary, Source={ThemeResource Colors}, Mode=OneWay, Converter={StaticResource BrushColorConverter}}"
                                        Text="{TemplateBinding Tag}" />

                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup x:Name="CommonStates">
                                            <VisualState x:Name="Normal">
                                                <Storyboard>
                                                    <ColorAnimation
                                                        Storyboard.TargetName="ColoredBackground"
                                                        Storyboard.TargetProperty="(UIElement.Background).(SolidColorBrush.Color)"
                                                        To="{Binding Color, Source={ThemeResource ControlPrimary}}"
                                                        Duration="0:0:0.2" />
                                                    <ColorAnimation
                                                        Storyboard.TargetName="ColoredBackground"
                                                        Storyboard.TargetProperty="(UIElement.BorderBrush).(SolidColorBrush.Color)"
                                                        To="{Binding Color, Source={ThemeResource ControlPrimaryDisabled}}"
                                                        Duration="0:0:0.2" />
                                                    <ColorAnimation
                                                        Storyboard.TargetName="TextPresenter"
                                                        Storyboard.TargetProperty="(UIElement.Foreground).(SolidColorBrush.Color)"
                                                        To="{Binding Color, Source={ThemeResource ButtonForeground}}"
                                                        Duration="0:0:0.2" />

                                                    <PointerUpThemeAnimation Storyboard.TargetName="ColoredBackground" />
                                                </Storyboard>
                                            </VisualState>

                                            <VisualState x:Name="PointerOver">
                                                <Storyboard>
                                                    <ColorAnimation
                                                        Storyboard.TargetName="ColoredBackground"
                                                        Storyboard.TargetProperty="(UIElement.Background).(SolidColorBrush.Color)"
                                                        To="{Binding Color, Source={ThemeResource ControlPrimaryDisabled}}"
                                                        Duration="0:0:0.2" />
                                                    <ColorAnimation
                                                        Storyboard.TargetName="ColoredBackground"
                                                        Storyboard.TargetProperty="(UIElement.BorderBrush).(SolidColorBrush.Color)"
                                                        To="{Binding Color, Source={ThemeResource ControlPrimaryDisabled}}"
                                                        Duration="0:0:0.2" />
                                                    <ColorAnimation
                                                        Storyboard.TargetName="TextPresenter"
                                                        Storyboard.TargetProperty="(UIElement.Foreground).(SolidColorBrush.Color)"
                                                        To="{Binding Color, Source={ThemeResource ButtonForegroundPointerOver}}"
                                                        Duration="0:0:0.2" />

                                                    <PointerUpThemeAnimation Storyboard.TargetName="ColoredBackground" />
                                                </Storyboard>
                                            </VisualState>

                                            <VisualState x:Name="Pressed">
                                                <Storyboard>
                                                    <ColorAnimation
                                                        Storyboard.TargetName="ColoredBackground"
                                                        Storyboard.TargetProperty="(UIElement.Background).(SolidColorBrush.Color)"
                                                        To="{Binding Color, Source={ThemeResource ControlOutlineDisabled}}"
                                                        Duration="0:0:0.2" />
                                                    <ColorAnimation
                                                        Storyboard.TargetName="ColoredBackground"
                                                        Storyboard.TargetProperty="(UIElement.BorderBrush).(SolidColorBrush.Color)"
                                                        To="{Binding Color, Source={ThemeResource ControlOutlineDisabled}}"
                                                        Duration="0:0:0.2" />
                                                    <ColorAnimation
                                                        Storyboard.TargetName="TextPresenter"
                                                        Storyboard.TargetProperty="(UIElement.Foreground).(SolidColorBrush.Color)"
                                                        To="{Binding Color, Source={ThemeResource ButtonForegroundPressed}}"
                                                        Duration="0:0:0.2" />

                                                    <PointerDownThemeAnimation Storyboard.TargetName="ColoredBackground" />
                                                </Storyboard>
                                            </VisualState>

                                            <VisualState x:Name="Disabled">
                                                <Storyboard>
                                                    <ColorAnimation
                                                        Storyboard.TargetName="ColoredBackground"
                                                        Storyboard.TargetProperty="(UIElement.Background).(SolidColorBrush.Color)"
                                                        To="{Binding Color, Source={ThemeResource ControlOutlineDisabled}}"
                                                        Duration="0:0:0.2" />
                                                    <ColorAnimation
                                                        Storyboard.TargetName="ColoredBackground"
                                                        Storyboard.TargetProperty="(UIElement.BorderBrush).(SolidColorBrush.Color)"
                                                        To="{Binding Color, Source={ThemeResource ControlOutlineDisabled}}"
                                                        Duration="0:0:0.2" />
                                                    <ColorAnimation
                                                        Storyboard.TargetName="TextPresenter"
                                                        Storyboard.TargetProperty="(UIElement.Foreground).(SolidColorBrush.Color)"
                                                        To="{Binding Color, Source={ThemeResource ButtonForegroundDisabled}}"
                                                        Duration="0:0:0.2" />
                                                </Storyboard>
                                            </VisualState>

                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style.Setters>
            </Style>


            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillUnchecked" Color="{Binding Color, Source={ThemeResource ControlPrimary}}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillUncheckedPointerOver" Color="{Binding Color, Source={ThemeResource ControlOutline}}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillUncheckedPressed" Color="{Binding Color, Source={ThemeResource ControlPrimaryDisabled}}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillUncheckedDisabled" Color="{Binding Color, Source={ThemeResource ControlPrimaryDisabled}}" />

            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeUnchecked" Color="{Binding Color, Source={ThemeResource ControlOutline}}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeUncheckedPointerOver" Color="{Binding Color, Source={ThemeResource ControlOutline}}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeUncheckedPressed" Color="{Binding Color, Source={ThemeResource ControlOutlineDisabled}}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeUncheckedDisabled" Color="{Binding Color, Source={ThemeResource ControlOutlineDisabled}}" />

            <SolidColorBrush x:Key="CheckBoxForegroundUnchecked" Color="{Binding Color, Source={ThemeResource TextSecondary}}" />
            <SolidColorBrush x:Key="CheckBoxForegroundUncheckedPointerOver" Color="{Binding Color, Source={ThemeResource TextPrimary}}" />
            <SolidColorBrush x:Key="CheckBoxForegroundUncheckedPressed" Color="{Binding Color, Source={ThemeResource TextTertiary}}" />
            <SolidColorBrush x:Key="CheckBoxForegroundUncheckedDisabled" Color="{Binding Color, Source={ThemeResource TextDisabled}}" />

            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillChecked" Color="{Binding Color, Source={ThemeResource AccentPrimary}}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillCheckedPointerOver" Color="{Binding Color, Source={ThemeResource AccentLight}}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillCheckedPressed" Color="{Binding Color, Source={ThemeResource AccentDark}}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillCheckedDisabled" Color="{Binding Color, Source={ThemeResource ControlPrimaryDisabled}}" />

            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeChecked" Color="{Binding Color, Source={ThemeResource AccentPrimary}}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeCheckedPointerOver" Color="{Binding Color, Source={ThemeResource AccentLight}}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeCheckedPressed" Color="{Binding Color, Source={ThemeResource AccentDark}}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeCheckedDisabled" Color="{Binding Color, Source={ThemeResource ControlPrimaryDisabled}}" />

            <SolidColorBrush x:Key="CheckBoxForegroundChecked" Color="{Binding Color, Source={ThemeResource TextSecondary}}" />
            <SolidColorBrush x:Key="CheckBoxForegroundCheckedPointerOver" Color="{Binding Color, Source={ThemeResource TextPrimary}}" />
            <SolidColorBrush x:Key="CheckBoxForegroundCheckedPressed" Color="{Binding Color, Source={ThemeResource TextTertiary}}" />
            <SolidColorBrush x:Key="CheckBoxForegroundCheckedDisabled" Color="{Binding Color, Source={ThemeResource TextDisabled}}" />

            <SolidColorBrush x:Key="CheckBoxCheckGlyphForegroundChecked" Color="{Binding Color, Source={ThemeResource ControlSolidPrimary}}" />
            <SolidColorBrush x:Key="CheckBoxCheckGlyphForegroundCheckedPointerOver" Color="{Binding Color, Source={ThemeResource ControlSolidOutline}}" />
            <SolidColorBrush x:Key="CheckBoxCheckGlyphForegroundCheckedPressed" Color="{Binding Color, Source={ThemeResource ControlSolidPrimaryDisabled}}" />
            <SolidColorBrush x:Key="CheckBoxCheckGlyphForegroundCheckedDisabled" Color="{Binding Color, Source={ThemeResource ControlOutlineDisabled}}" />


            <SolidColorBrush x:Key="ComboBoxItemBackgroundPointerOver" Color="{Binding Color, Source={ThemeResource ControlPrimary}}" />
            <SolidColorBrush x:Key="ComboBoxItemBackgroundPressed" Color="{Binding Color, Source={ThemeResource ControlOutline}}" />

            <SolidColorBrush x:Key="ComboBoxItemBorderBrushPointerOver" Color="{Binding Color, Source={ThemeResource ControlPrimary}}" />
            <SolidColorBrush x:Key="ComboBoxItemBorderBrushPressed" Color="{Binding Color, Source={ThemeResource ControlOutlineDisabled}}" />

            <SolidColorBrush x:Key="ComboBoxItemBackgroundSelected" Color="{Binding Color, Source={ThemeResource ControlOutline}}" />
            <SolidColorBrush x:Key="ComboBoxItemBackgroundSelectedPointerOver" Color="{Binding Color, Source={ThemeResource ControlPrimary}}" />
            <SolidColorBrush x:Key="ComboBoxItemBackgroundSelectedPressed" Color="{Binding Color, Source={ThemeResource ControlPrimaryDisabled}}" />
            <SolidColorBrush x:Key="ComboBoxItemBackgroundSelectedDisabled" Color="{Binding Color, Source={ThemeResource ControlPrimaryDisabled}}" />

            <SolidColorBrush x:Key="ComboBoxItemBorderBrushSelected" Color="{Binding Color, Source={ThemeResource ControlOutline}}" />
            <SolidColorBrush x:Key="ComboBoxItemBorderBrushSelectedPointerOver" Color="{Binding Color, Source={ThemeResource ControlOutline}}" />
            <SolidColorBrush x:Key="ComboBoxItemBorderBrushSelectedPressed" Color="{Binding Color, Source={ThemeResource ControlOutlineDisabled}}" />
            <SolidColorBrush x:Key="ComboBoxItemBorderBrushSelectedDisabled" Color="{Binding Color, Source={ThemeResource ControlOutlineDisabled}}" />

            <SolidColorBrush x:Key="ComboBoxItemForeground" Color="{Binding Color, Source={ThemeResource TextSecondary}}" />
            <SolidColorBrush x:Key="ComboBoxItemForegroundPointerOver" Color="{Binding Color, Source={ThemeResource TextPrimary}}" />
            <SolidColorBrush x:Key="ComboBoxItemForegroundPressed" Color="{Binding Color, Source={ThemeResource TextTertiary}}" />
            <SolidColorBrush x:Key="ComboBoxItemForegroundDisabled" Color="{Binding Color, Source={ThemeResource TextDisabled}}" />

            <SolidColorBrush x:Key="ComboBoxItemForegroundSelected" Color="{Binding Color, Source={ThemeResource TextPrimary}}" />
            <SolidColorBrush x:Key="ComboBoxItemForegroundSelectedPointerOver" Color="{Binding Color, Source={ThemeResource TextSecondary}}" />
            <SolidColorBrush x:Key="ComboBoxItemForegroundSelectedPressed" Color="{Binding Color, Source={ThemeResource TextTertiary}}" />
            <SolidColorBrush x:Key="ComboBoxItemForegroundSelectedDisabled" Color="{Binding Color, Source={ThemeResource TextDisabled}}" />

            <SolidColorBrush x:Key="ComboBoxDropDownBackground" Color="{Binding Color, Source={ThemeResource ControlSolidPrimary}}" />
            <SolidColorBrush x:Key="ComboBoxDropDownBorderBrush" Color="{Binding Color, Source={ThemeResource ControlSolidOutline}}" />


            <SolidColorBrush x:Key="ComboBoxBackground" Color="{Binding Color, Source={ThemeResource ControlPrimary}}" />
            <SolidColorBrush x:Key="ComboBoxBackgroundUnfocused" Color="{Binding Color, Source={ThemeResource ControlPrimary}}" />
            <SolidColorBrush x:Key="ComboBoxBackgroundPointerOver" Color="{Binding Color, Source={ThemeResource ControlOutline}}" />
            <SolidColorBrush x:Key="ComboBoxBackgroundPressed" Color="{Binding Color, Source={ThemeResource ControlPrimaryDisabled}}" />
            <SolidColorBrush x:Key="ComboBoxBackgroundDisabled" Color="{Binding Color, Source={ThemeResource ControlPrimaryDisabled}}" />

            <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="{Binding Color, Source={ThemeResource ControlOutline}}" />
            <SolidColorBrush x:Key="ComboBoxBorderBrushFocused" Color="{Binding Color, Source={ThemeResource ControlOutline}}" />
            <SolidColorBrush x:Key="ComboBoxBorderBrushPointerOver" Color="{Binding Color, Source={ThemeResource ControlOutline}}" />
            <SolidColorBrush x:Key="ComboBoxBorderBrushPressed" Color="{Binding Color, Source={ThemeResource ControlOutlineDisabled}}" />
            <SolidColorBrush x:Key="ComboBoxBorderBrushDisabled" Color="{Binding Color, Source={ThemeResource ControlOutlineDisabled}}" />

            <SolidColorBrush x:Key="ComboBoxForeground" Color="{Binding Color, Source={ThemeResource TextSecondary}}" />
            <SolidColorBrush x:Key="ComboBoxForegroundFocused" Color="{Binding Color, Source={ThemeResource TextSecondary}}" />
            <SolidColorBrush x:Key="ComboBoxForegroundPointerOver" Color="{Binding Color, Source={ThemeResource TextPrimary}}" />
            <SolidColorBrush x:Key="ComboBoxForegroundPressed" Color="{Binding Color, Source={ThemeResource TextTertiary}}" />
            <SolidColorBrush x:Key="ComboBoxForegroundDisabled" Color="{Binding Color, Source={ThemeResource TextDisabled}}" />

            <SolidColorBrush x:Key="ComboBoxPlaceHolderForeground" Color="{Binding Color, Source={ThemeResource TextTertiary}}" />
            <SolidColorBrush x:Key="ComboBoxPlaceHolderForegroundFocused" Color="{Binding Color, Source={ThemeResource TextTertiary}}" />
            <SolidColorBrush x:Key="ComboBoxPlaceHolderForegroundPointerOver" Color="{Binding Color, Source={ThemeResource TextTertiary}}" />
            <SolidColorBrush x:Key="ComboBoxPlaceHolderForegroundPressed" Color="{Binding Color, Source={ThemeResource TextTertiary}}" />
            <SolidColorBrush x:Key="ComboBoxPlaceHolderForegroundDisabled" Color="{Binding Color, Source={ThemeResource TextDisabled}}" />

            <SolidColorBrush x:Key="ComboBoxDropDownGlyphForeground" Color="{Binding Color, Source={ThemeResource TextSecondary}}" />
            <SolidColorBrush x:Key="ComboBoxDropDownGlyphForegroundPointerOver" Color="{Binding Color, Source={ThemeResource TextPrimary}}" />
            <SolidColorBrush x:Key="ComboBoxDropDownGlyphForegroundPressed" Color="{Binding Color, Source={ThemeResource TextTertiary}}" />
            <SolidColorBrush x:Key="ComboBoxDropDownGlyphForegroundDisabled" Color="{Binding Color, Source={ThemeResource TextDisabled}}" />

            <SolidColorBrush x:Key="ComboBoxItemPillFillBrush" Color="{Binding Color, Source={ThemeResource AccentPrimary}}" />

            <SolidColorBrush x:Key="ComboBoxHeaderForeground" Color="{Binding Color, Source={ThemeResource TextPrimary}}" />
            <SolidColorBrush x:Key="ComboBoxHeaderForegroundDisabled" Color="{Binding Color, Source={ThemeResource TextDisabled}}" />


            <SolidColorBrush x:Key="ScrollBarButtonArrowForeground" Color="{Binding Color, Source={ThemeResource TextSecondary}}" />
            <SolidColorBrush x:Key="ScrollBarButtonArrowForegroundPointerOver" Color="{Binding Color, Source={ThemeResource TextPrimary}}" />
            <SolidColorBrush x:Key="ScrollBarButtonArrowForegroundPressed" Color="{Binding Color, Source={ThemeResource TextTertiary}}" />
            <SolidColorBrush x:Key="ScrollBarButtonArrowForegroundDisabled" Color="{Binding Color, Source={ThemeResource TextDisabled}}" />

            <SolidColorBrush x:Key="ScrollBarTrackFill" Color="{Binding Color, Source={ThemeResource ControlPrimary}}" />
            <SolidColorBrush x:Key="ScrollBarTrackFillPointerOver" Color="{Binding Color, Source={ThemeResource ControlOutline}}" />
            <SolidColorBrush x:Key="ScrollBarTrackFillDisabled" Color="{Binding Color, Source={ThemeResource ControlPrimaryDisabled}}" />


            <SolidColorBrush x:Key="HyperlinkButtonForeground" Color="{Binding Color, Source={ThemeResource AccentPrimary}}" />
            <SolidColorBrush x:Key="HyperlinkButtonForegroundPointerOver" Color="{Binding Color, Source={ThemeResource AccentLight}}" />
            <SolidColorBrush x:Key="HyperlinkButtonForegroundPressed" Color="{Binding Color, Source={ThemeResource AccentDark}}" />
            <SolidColorBrush x:Key="HyperlinkButtonForegroundDisabled" Color="{Binding Color, Source={ThemeResource TextDisabled}}" />

            <SolidColorBrush x:Key="HyperlinkButtonBackground" Color="Transparent" />
            <SolidColorBrush x:Key="HyperlinkButtonBackgroundPointerOver" Color="Transparent" />
            <SolidColorBrush x:Key="HyperlinkButtonBackgroundPressed" Color="Transparent" />
            <SolidColorBrush x:Key="HyperlinkButtonBackgroundDisabled" Color="Transparent" />

            <SolidColorBrush x:Key="HyperlinkButtonBorderBrush" Color="Transparent" />
            <SolidColorBrush x:Key="HyperlinkButtonBorderBrushPointerOver" Color="Transparent" />
            <SolidColorBrush x:Key="HyperlinkButtonBorderBrushPressed" Color="Transparent" />
            <SolidColorBrush x:Key="HyperlinkButtonBorderBrushDisabled" Color="Transparent" />


            <SolidColorBrush x:Key="ExpanderHeaderBackground" Color="{Binding Color, Source={ThemeResource ControlPrimary}}" />

            <SolidColorBrush x:Key="ExpanderHeaderBorderBrush" Color="{Binding Color, Source={ThemeResource ControlOutline}}" />
            <SolidColorBrush x:Key="ExpanderHeaderBorderPointerOverBrush" Color="{Binding Color, Source={ThemeResource ControlOutlineDisabled}}" />
            <SolidColorBrush x:Key="ExpanderHeaderBorderPressedBrush" Color="{Binding Color, Source={ThemeResource ControlOutlineDisabled}}" />
            <SolidColorBrush x:Key="ExpanderHeaderDisabledBorderBrush" Color="{Binding Color, Source={ThemeResource ControlOutlineDisabled}}" />

            <SolidColorBrush x:Key="ExpanderHeaderForeground" Color="{Binding Color, Source={ThemeResource TextSecondary}}" />
            <SolidColorBrush x:Key="ExpanderHeaderForegroundPointerOver" Color="{Binding Color, Source={ThemeResource TextPrimary}}" />
            <SolidColorBrush x:Key="ExpanderHeaderForegroundPressed" Color="{Binding Color, Source={ThemeResource TextTertiary}}" />
            <SolidColorBrush x:Key="ExpanderHeaderDisabledForeground" Color="{Binding Color, Source={ThemeResource TextDisabled}}" />

            <SolidColorBrush x:Key="ExpanderChevronBackground" Color="{Binding Color, Source={ThemeResource ControlPrimary}}" />
            <SolidColorBrush x:Key="ExpanderChevronPointerOverBackground" Color="{Binding Color, Source={ThemeResource ControlOutline}}" />
            <SolidColorBrush x:Key="ExpanderChevronPressedBackground" Color="{Binding Color, Source={ThemeResource ControlPrimaryDisabled}}" />

            <SolidColorBrush x:Key="ExpanderChevronForeground" Color="{Binding Color, Source={ThemeResource TextSecondary}}" />
            <SolidColorBrush x:Key="ExpanderChevronPointerOverForeground" Color="{Binding Color, Source={ThemeResource TextPrimary}}" />
            <SolidColorBrush x:Key="ExpanderChevronPressedForeground" Color="{Binding Color, Source={ThemeResource TextTertiary}}" />

            <SolidColorBrush
                x:Key="ExpanderContentBackground"
                Opacity="0.5"
                Color="{Binding Color, Source={ThemeResource ControlPrimary}}" />
            <SolidColorBrush x:Key="ExpanderContentBorderBrush" Color="{Binding Color, Source={ThemeResource ControlOutline}}" />


            <Style TargetType="ProgressBar">
                <Setter Property="Foreground" Value="{ThemeResource AccentPrimary}" />
            </Style>


            <Style x:Key="Header" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="FontSize" Value="24" />
                <Setter Property="FontWeight" Value="Normal" />
                <Setter Property="Foreground" Value="{ThemeResource TextTertiary}" />
            </Style>

            <Style x:Key="Title" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="FontSize" Value="24" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="Foreground" Value="{ThemeResource TextPrimary}" />
                <Setter Property="Typography.Capitals" Value="AllSmallCaps" />
            </Style>

            <Style x:Key="TitleSecondary" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontWeight" Value="Normal" />
                <Setter Property="Foreground" Value="{ThemeResource TextPrimary}" />
            </Style>

            <Style x:Key="Content" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontWeight" Value="Normal" />
                <Setter Property="Foreground" Value="{ThemeResource TextSecondary}" />
            </Style>

            <Style x:Key="ContentSecondary" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontWeight" Value="Normal" />
                <Setter Property="Foreground" Value="{ThemeResource TextTertiary}" />
            </Style>

            <Style x:Key="Subpoint" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontWeight" Value="SemiLight" />
                <Setter Property="Foreground" Value="{ThemeResource TextSecondary}" />
            </Style>

            <Style x:Key="SubpointSecondary" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontWeight" Value="SemiLight" />
                <Setter Property="Foreground" Value="{ThemeResource TextTertiary}" />
            </Style>


            <Style x:Key="Card" TargetType="ui:HCont">
                <Setter Property="Background" Value="{ThemeResource ControlPrimary}" />
                <Setter Property="VerticalAlignment" Value="Top" />
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Foreground" Value="{ThemeResource TextSecondary}" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="FontWeight" Value="Normal" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ui:HCont">
                            <Grid
                                Name="RootLayout"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}"
                                MinWidth="{TemplateBinding MinWidth}"
                                MinHeight="{TemplateBinding MinHeight}"
                                Margin="{TemplateBinding Margin}"
                                Padding="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                ex:Effects.Shadow="{TemplateBinding ex:Effects.Shadow}"
                                Background="{TemplateBinding Background}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Visibility="{TemplateBinding Visibility}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Name="Header"
                                    Height="32"
                                    Margin="12,0,12,0"
                                    Opacity="1"
                                    Style="{ThemeResource Title}"
                                    Text="{TemplateBinding Title}"
                                    TextTrimming="CharacterEllipsis">
                                    <TextBlock.OpacityTransition>
                                        <ScalarTransition />
                                    </TextBlock.OpacityTransition>
                                </TextBlock>

                                <ScrollViewer
