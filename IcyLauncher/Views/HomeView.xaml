<Page
    x:Class="IcyLauncher.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:IcyLauncher.UI"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer>
            <StackPanel Margin="12" Spacing="20">
                <StackPanel Orientation="Horizontal" Spacing="50">
                    <ToggleSwitch Header="On-Enabled" IsOn="true" />
                    <ToggleSwitch
                        x:Name="Ssss"
                        Header="Off-Enabled"
                        IsOn="False" />
                    <ToggleSwitch
                        Header="On-Disabled"
                        IsEnabled="False"
                        IsOn="True" />
                    <ToggleSwitch
                        Header="Off-Disabled"
                        IsEnabled="{x:Bind Ssss.IsOn, Mode=TwoWay}"
                        IsOn="false" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="50">
                    <CheckBox Content="On-Enabled" IsChecked="true" />
                    <CheckBox Content="Off-Enabled" IsChecked="False" />
                    <CheckBox
                        Content="On-Disabled"
                        IsChecked="True"
                        IsEnabled="False" />
                    <CheckBox
                        Content="Off-Disabled"
                        IsChecked="false"
                        IsEnabled="False" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="50">
                    <Button Content="Enabled" IsEnabled="True" />
                    <Button Content="Disabled" IsEnabled="False" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="50">
                    <ComboBox Header="Enabled" PlaceholderText="placyyyyy">
                        <ComboBoxItem Content="Item1" />
                        <ComboBoxItem Content="Item2" />
                        <ComboBoxItem Content="Item3" IsEnabled="False" />
                    </ComboBox>
                    <ComboBox
                        Header="Disabled"
                        IsEnabled="False"
                        SelectedIndex="1">
                        <ComboBoxItem Content="Item1" />
                        <ComboBoxItem Content="Item2" />
                        <ComboBoxItem Content="Item3" IsEnabled="False" />
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="50">
                    <ui:TextBox
                        Width="150"
                        Header="Text-Enabled"
                        Text="Text" />
                    <ui:TextBox
                        Width="150"
                        Header="Placholder-Enabled"
                        PlaceholderText="PlaceHolder" />
                    <ui:TextBox
                        Width="150"
                        Header="Text-Disabled"
                        IsEnabled="{x:Bind Ssss.IsOn, Mode=OneWay}"
                        Text="Text" />
                    <ui:TextBox
                        Width="150"
                        Header="Placholder-Disabled"
                        IsEnabled="False"
                        PlaceholderText="PlaceHolder" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="50">
                    <TextBlock Style="{ThemeResource Header}" Text="Header" />
                    <TextBlock Style="{ThemeResource Title}" Text="Title" />
                    <TextBlock Style="{ThemeResource TitleSecondary}" Text="TitleSecondary" />
                    <TextBlock Style="{ThemeResource Content}" Text="Content" />
                    <TextBlock Style="{ThemeResource ContentSecondary}" Text="ContentSecondary" />
                    <TextBlock Style="{ThemeResource Subpoint}" Text="Subpoint" />
                    <TextBlock Style="{ThemeResource SubpointSecondary}" Text="SubpointSecondary" />
                </StackPanel>

                <ui:ScrollLane
                    Margin="0,0"
                    ItemSelectionChanged="{x:Bind viewModel.OnItemSelectionChanged}"
                    ItemContainerStyle="{ThemeResource ProfileGridViewItem}"
                    ItemTemplate="{ThemeResource ProfileTemplate}"
                    ItemsSource="{x:Bind viewModel.Profiles}" />

                <StackPanel>
                    <Grid
                        Width="300"
                        Padding="12"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="{ThemeResource ControlPrimary}"
                        CornerRadius="8">
                        <TextBlock
                            Margin="-2,-8,0,0"
                            Style="{ThemeResource Title}"
                            Text="News"
                            TextTrimming="CharacterEllipsis" />
                        <TextBlock
                            Margin="0,23,0,0"
                            Style="{ThemeResource Content}"
                            TextWrapping="Wrap">
                            - This is an example news [1]<LineBreak />
                            - This is another example [2]<LineBreak />
                            - And again, a fucking example
                            news [3]<LineBreak />
                            - End my suffer. Please. I cant
                            do this anymore</TextBlock>
                    </Grid>
                </StackPanel>

                <StackPanel
                    Margin="0,100,0,0"
                    Orientation="Horizontal"
                    Spacing="50">
                    <Viewbox Height="300">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <ColorPicker Color="{x:Bind viewModel.AccentPrimary, Mode=TwoWay}" />
                            <ColorPicker Color="{x:Bind viewModel.AccentLight, Mode=TwoWay}" />
                            <ColorPicker Color="{x:Bind viewModel.AccentDark, Mode=TwoWay}" />
                        </StackPanel>
                    </Viewbox>
                    <Button
                        VerticalAlignment="Top"
                        Command="{x:Bind viewModel.UpdateAccentCommand}"
                        Content="Update Accent" />
                    <ToggleSwitch
                        VerticalAlignment="Top"
                        Header="DarkMode"
                        IsOn="{x:Bind viewModel.DarkMode, Mode=TwoWay}" />
                    <ComboBox
                        Header="BlurEffect"
                        ItemsSource="{x:Bind viewModel.BlurEffects}"
                        SelectedItem="{x:Bind viewModel.SelectedBlurEffect, Mode=TwoWay}" />
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
