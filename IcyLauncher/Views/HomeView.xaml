<Page
    x:Class="IcyLauncher.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Grid>
        <TextBlock
            FontSize="20"
            Foreground="{StaticResource AccentPrimary}"
            Text="some goofy ahh text" />

        <StackPanel Margin="50" Spacing="10">
            <StackPanel Orientation="Horizontal" Spacing="50">
                <ToggleSwitch Header="On-Enabled" IsOn="true" />
                <ToggleSwitch
                    x:Name="Ssss"
                    Header="Off-Enabled"
                    IsOn="False" />
                <ToggleSwitch
                    Header="On-Disabled"
                    IsEnabled="False"
                    IsOn="True" />
                <ToggleSwitch
                    Header="Off-Disabled"
                    IsEnabled="{x:Bind Ssss.IsOn, Mode=TwoWay}"
                    IsOn="false" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="50">
                <CheckBox Content="On-Enabled" IsChecked="true" />
                <CheckBox Content="Off-Enabled" IsChecked="False" />
                <CheckBox
                    Content="On-Disabled"
                    IsChecked="True"
                    IsEnabled="False" />
                <CheckBox
                    Content="Off-Disabled"
                    IsChecked="false"
                    IsEnabled="False" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="50">
                <Button Content="Enabled" IsEnabled="True" />
                <Button Content="Disabled" IsEnabled="False" />
            </StackPanel>

            <StackPanel
                Margin="0,10,0,0"
                Orientation="Horizontal"
                Spacing="50">
                <ColorPicker Color="{x:Bind viewModel.AccentPrimary, Mode=TwoWay}" />
                <ColorPicker Color="{x:Bind viewModel.AccentLight, Mode=TwoWay}" />
                <ColorPicker Color="{x:Bind viewModel.AccentDark, Mode=TwoWay}" />
                <Button
                    Command="{x:Bind viewModel.UpdateAccentCommand}"
                    Content="Update Accent" />
                <ToggleSwitch Header="DarkMode" IsOn="{x:Bind viewModel.DarkMode, Mode=TwoWay}" />
                <ComboBox
                    Header="BlurEffect"
                    ItemsSource="{x:Bind viewModel.BlurEffects}"
                    SelectedItem="{x:Bind viewModel.SelectedBlurEffect, Mode=TwoWay}" />
                <ToggleSwitch Header="BlurDarkMode" IsOn="{x:Bind viewModel.UseDarkModeBlur, Mode=TwoWay}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
