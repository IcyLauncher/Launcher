<Page
    x:Class="IcyLauncher.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:composition="using:Microsoft.UI.Composition"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ex="using:CommunityToolkit.WinUI.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="using:CommunityToolkit.WinUI.UI.Media"
    xmlns:ui="using:IcyLauncher.UI"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">
    <Page.Resources>
        <md:AttachedCardShadow
            x:Key="CardShadow"
            BlurRadius="20"
            CornerRadius="8"
            Opacity="0.2"
            Offset="0,3,0" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="243" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--<Image
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Source="{x:Bind viewModel.BannerSource, Mode=OneWay}"
            Stretch="UniformToFill" />-->

        <Grid Grid.Row="0" Loaded="{x:Bind viewModel.OnBannerLoaded}" />
        <ComboBox
            Grid.Row="1"
            Header="Banner image"
            SelectedIndex="{x:Bind viewModel.SelectedBannerImage, Mode=TwoWay}">
            <ComboBoxItem Content="null" />
            <ComboBoxItem Content="0" />
            <ComboBoxItem Content="3" />
            <ComboBoxItem Content="6" />
            <ComboBoxItem Content="9" />
            <ComboBoxItem Content="12" />
            <ComboBoxItem Content="14" />
            <ComboBoxItem Content="17" />
            <ComboBoxItem Content="20" />
        </ComboBox>
    </Grid>
</Page>
