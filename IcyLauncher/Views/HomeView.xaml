<Page
    x:Class="IcyLauncher.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:IcyLauncher.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <TextBlock
            FontSize="20"
            Foreground="{StaticResource AccentPrimary}"
            Text="{x:Bind viewModel.Configuration.Launcher.TexturepackDirectory}" />

        <StackPanel Margin="50">
            <ToggleSwitch Header="enable" IsOn="{x:Bind viewModel.Enable, Mode=TwoWay}" />
            <ToggleSwitch Header="Darky" IsOn="{x:Bind viewModel.DarkMOde, Mode=TwoWay}" />
            <Button Command="{x:Bind viewModel.MicaCommand}">Mica</Button>
            <Button Command="{x:Bind viewModel.AcrylicCommand}">Acrylic</Button>
            <Button Command="{x:Bind viewModel.SimpleCommand}">Simple</Button>
            <Button Command="{x:Bind viewModel.NoneCommand}">None</Button>
        </StackPanel>
    </Grid>
</Page>
